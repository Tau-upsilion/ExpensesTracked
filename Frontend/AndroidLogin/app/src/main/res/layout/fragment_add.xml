<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="#FFFF">

    <TextView
        android:id="@+id/greeting_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/title_addPage"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/add_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_expense_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income or Expense?"
            android:textSize="25sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top">

        <RadioGroup
            android:id="@+id/add_expense_purchase_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/add_income_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income" />

            <RadioButton
                android:id="@+id/add_expense_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_container3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/add_nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of Income/Expense"
            android:inputType="text"
            android:textColor="#000000"
            tools:ignore="Autofill" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_container4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/add_dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="01/01/2000"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!--<EditText-->
        <!--android:id="@+id/add_dateText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="0.00"-->
        <!--android:inputType="number|numberDecimal"-->
        <!--android:textColor="#000000"-->
        <!--tools:ignore="Autofill" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_container5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:textSize="25sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/add_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.AppCompatSpinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_container6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/add_descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"
            android:textColor="#000000"
            tools:ignore="Autofill" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_container7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount (USD): "
            android:textSize="25sp" />

        <EditText
            android:id="@+id/add_amountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:inputType="number|numberDecimal"
            android:textColor="#000000"
            tools:ignore="Autofill" />

    </LinearLayout>

    <Button
        android:id="@+id/add_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/title_add" />

</LinearLayout>
